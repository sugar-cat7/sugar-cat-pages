{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalPassThroughEnv": [],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "//#knip": {
      "cache": false,
      "inputs": [
        "knip.json",
        "packages/*/src/**",
        "packages/*/package.json",
        "services/*/app/**",
        "services/*/features/**",
        "services/*/shared/**",
        "services/*/{domain,infra,usecase,cmd,local}/**",
        "services/*/package.json"
      ]
    },
    "//#knip:fix": {
      "cache": false
    }
  }
}
