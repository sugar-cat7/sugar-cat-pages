{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreExportsUsedInFile": {
    "interface": true,
    "type": true
  },
  "ignoreBinaries": [],
  "ignoreUnresolved": ["\\.\\/.+types/.+"],
  "tags": ["-lintignore"],
  "workspaces": {
    ".": {
      "ignoreDependencies": [
        "@textlint/textlint-plugin-markdown",
        "textlint-rule-preset-ja-technical-writing"
      ]
    },
    "services/mypages": {
      "entry": [
        "app/**/{page,layout,loading,error,not-found,route,global-error}.{ts,tsx}"
      ],
      "project": ["**/*.{ts,tsx}"],
      "ignore": ["node_modules/**", "workers/app.ts"],
      "ignoreDependencies": ["tailwindcss"]
    },
    "packages/errors": {
      "project": ["*.ts"],
      "ignore": ["dist/**", "node_modules/**"]
    },
    "packages/logger": {
      "project": ["*.ts"],
      "ignore": ["dist/**", "node_modules/**"]
    },
    "packages/dayjs": {
      "project": ["*.ts"],
      "ignore": ["dist/**", "node_modules/**"]
    },
    "packages/content-fetcher": {
      "project": ["src/**/*.ts"],
      "ignore": ["dist/**", "node_modules/**"]
    }
  }
}
