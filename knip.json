{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreExportsUsedInFile": {
    "interface": true,
    "type": true
  },
  "ignoreUnresolved": [
    "./\\+types/root",
    "./\\+types/route"
  ],
  "tags": ["-lintignore"],
  "workspaces": {
    ".": {},
    "services/mypages": {
      "entry": ["app/**/{page,layout,loading,error,not-found,route,global-error}.{ts,tsx}"],
      "project": ["**/*.{ts,tsx}"],
      "ignore": [".next/**", "node_modules/**", "workers/app.ts"],
      "ignoreDependencies": [
        "tailwindcss"
      ]
    },
    "services/server": {
      "entry": ["cmd/*.ts", "local/**/*.ts"],
      "project": ["**/*.ts"],
      "ignore": ["dist/**", "drizzle/**", "node_modules/**"]
    },
    "packages/errors": {
      "project": ["*.ts"],
      "ignore": ["dist/**", "node_modules/**"]
    },
    "packages/logger": {
      "project": ["*.ts"],
      "ignore": ["dist/**", "node_modules/**"]
    }
  }
}
